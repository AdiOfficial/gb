<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity"
                                             tools:layout_editor_absoluteY="25dp"
        >
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
            >
        <TextView android:id="@+id/options"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_orange_light"
                  android:text=" Options "
                  android:textSize="24sp"
                  android:textAlignment="center"
                />
        <TextView android:id="@+id/races"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_orange_light"
                  android:text=" Options "
                  android:textSize="18sp"
                  android:textAlignment="center"
                />
        <Button android:text=" Xenos "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Xenos"
                android:background="@drawable/border_message"
                />
        <Button android:text=" Impi "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Impi"
                android:background="@drawable/border_message"
                />
        <Button android:text=" Rainbow Beetles "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Rainbow"
                android:background="@drawable/border_message"
                />
        <Button android:text=" Warhide Tortois "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Warhide"
                android:background="@drawable/border_message"
                />
        <TextView android:id="@+id/app"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_orange_light"
                  android:text=" Settings "
                  android:textSize="18sp"
                  android:textAlignment="center"
                />
        <ToggleButton android:textOn=" Regular Sensors "
                      android:textOff=" Super Sensors "
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/SuperSensors"
                      android:background="@drawable/border_message"
                />
        <TextView android:id="@+id/app"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/holo_orange_light"
                  android:text=" Test Settings "
                  android:textSize="18sp"
                  android:textAlignment="center"
                />
        <ToggleButton android:textOn=" Hide Stats "
                      android:textOff=" Show Stats "
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/ShowStats"
                      android:background="@drawable/border_message"
                />
        <ToggleButton android:textOn=" Hide Click Targets "
                      android:textOff=" Show Click Targets "
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/ShowClickTargets"
                      android:background="@drawable/border_message"
                />

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/version"
              android:text="Version"
              android:textColor="@android:color/holo_green_light"
              android:textSize="8sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
            />
</android.support.constraint.ConstraintLayout>