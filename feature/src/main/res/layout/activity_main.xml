    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:id="@+id/DoArea"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:padding="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        <Button
                android:text="Make"
                android:minWidth="10dp"
                android:minHeight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MakeButton"
                android:onClick="makeStuff"
                android:visibility="visible"
                tools:visibility="visible"
                android:alpha="0.5"
                />
        <Button
                android:text="Cont"
                android:minWidth="10dp"
                android:minHeight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ContinuousButton"
                android:visibility="visible"
                tools:visibility="visible"
                android:alpha="0.5"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/DoButton"
                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DoButton"
                android:text="@string/button_Do"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/border_message"
                />
    </LinearLayout>

    <TextView
            android:layout_width="26dp"
            android:layout_height="11dp"
            android:id="@+id/version"
            android:text="Version"
            android:textColor="@android:color/holo_green_light"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
