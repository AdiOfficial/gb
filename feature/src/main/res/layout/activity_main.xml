    <TextView
            android:id="@+id/messageBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            android:maxLines="999"
            android:gravity="bottom"
            android:scrollbars="vertical"
            android:textColor="@android:color/holo_orange_light"
            android:background="@drawable/border_message"
            tools:text="Hello great commander, what is going on today"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Play"
            />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Play"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Levels"
            android:gravity="center"
            >
        <Button
                android:text=" New Game "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NewButton"
                android:background="@drawable/border_message"
                />
        <Button
                android:text=" Continue Game "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LoadButton"
                android:background="@drawable/border_message"
                />
        <Button
                android:text=" Play "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/StarmapButton2"
                android:onClick="mapView"
                android:background="@drawable/border_message"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Levels"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.589"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/DoArea"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            >
        <Button
                android:text="Level 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LoadButton1"
                android:background="@drawable/border_message"
                />
        <Button
                android:text="Level 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LoadButton2"
                android:background="@drawable/border_message"
                />
        <Button
                android:text="Level 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LoadButton3"
                android:background="@drawable/border_message"
                />
