<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp">

    <ImageView
            android:src="@android:color/background_dark"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/imageView3" android:alpha="0.5"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
            app:layout_constraintTop_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="@+id/scrollView2"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:scrollbars="vertical"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/DoButton" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="24dp"
                android:textColor="@android:color/holo_orange_light"
                tools:text="Hello great commander, what is going on today"/>
    </ScrollView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/linearLayout" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scrollView2" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" tools:padding="0dp" android:layout_marginTop="8dp">
        <Button
                android:text="Races"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RacesButton"
                android:onClick="races"/>
        <Button
                android:text="Ships"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ShipButton"
                android:onClick="ships"/>
        <Button
                android:text="Planets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Planets2Button" android:onClick="planets2"/>
        <Button
                android:text="Planets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Planets1Button" android:onClick="planets1"/>
        <Button
                android:text="Stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/StarsButton" android:onClick="stars"/>
        <Button
                android:text="Map 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/StarmapButton1" android:onClick="starmap1"/>
        <Button
                android:text="Don't"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:id="@+id/StarmapButton2" android:onClick="starmap2"/>
        <Button
                android:text="@string/button_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CreateButton"
                android:onClick="create"
                android:visibility="visible"
                tools:visibility="visible"
                android:alpha="0.5"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DoButton"
                android:text="@string/button_Do"
                android:onClick="doUniverse"
                app:layout_constraintTop_toBottomOf="@+id/CreateButton"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/version" android:text="Version"
            android:textColor="@android:color/holo_green_light"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>