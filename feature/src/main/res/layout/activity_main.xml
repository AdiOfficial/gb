<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp">

    <ImageView
            android:src="@android:color/background_dark"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/ImageViewBackground" android:alpha="0.5"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
            app:layout_constraintTop_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="@+id/scrollView2"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout1" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2">
        <TextView
                android:id="@+id/messageBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:scrollbars="vertical"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="24dp"
                android:textColor="@android:color/holo_orange_light"
                tools:text="Hello great commander, what is going on today"/>
    </ScrollView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" tools:padding="0dp" android:layout_marginTop="8dp">
        <Button
                android:text="Map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/StarmapButton2" android:onClick="starmap2"/>
        <Button
                android:text="Stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/StarsButton" android:onClick="stars"/>
        <Button
                android:text="Planets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/Planets1Button" android:onClick="planets1"/>
        <Button
                android:text="Planets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/Planets2Button" android:onClick="planets2"/>
        <Button
                android:text="Races"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RacesButton"
                android:visibility="gone"
                tools:visibility="visible"
                android:onClick="races"/>
        <Button
                android:text="Ships"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/ShipButton"
                android:onClick="ships"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:padding="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <Button
                android:text="New"
                android:minWidth="10dp"
                android:minHeight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CreateButton"
                android:onClick="create"
                android:visibility="gone"
                tools:visibility="visible"
                android:alpha="0.5"/>
        <Button
                android:text="Start Other Races"
                android:minWidth="10dp"
                android:minHeight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MakeButton"
                android:onClick="makeStuff"
                android:visibility="visible"
                tools:visibility="visible"
                android:alpha="0.5"/>
        <Button
                android:text="Cont"
                android:minWidth="10dp"
                android:minHeight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ContinuousButton"
                android:onClick="continuousDo"
                android:visibility="visible"
                tools:visibility="visible"
                android:alpha="0.5" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/DoButton"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DoButton"
                android:text="@string/button_Do"
                android:onClick="doUniverse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/version" android:text="Version"
            android:textColor="@android:color/holo_green_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="8sp"/>

</android.support.constraint.ConstraintLayout>