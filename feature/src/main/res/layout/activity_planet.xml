<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlanetActivity">

    <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/orionnebula"
            android:alpha="1" android:id="@+id/imageView" android:contentDescription="@string/orion_nebula"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/PlanetView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/PlanetStats"
            android:textColor="@android:color/holo_orange_light"
            app:layout_constraintTop_toBottomOf="@+id/PlanetView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:text="Planet" android:textSize="24sp"/>
    <Button
            android:text="Xenos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colonize0"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/PlanetStats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/colonize1"
            app:layout_constraintHorizontal_bias="0.302"/>
    <Button
            android:text="Impi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colonize1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/PlanetStats"
            app:layout_constraintStart_toEndOf="@id/colonize0"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="colonize1"/>

</android.support.constraint.ConstraintLayout>