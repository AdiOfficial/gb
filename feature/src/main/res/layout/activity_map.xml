<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/imageViewLayout"
                                             android:orientation="vertical"
        >

    <com.zwsi.gb.feature.MapView android:id="@+id/mapView"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 app:layout_constraintStart_toStartOf="parent"
                                 app:layout_constraintTop_toTopOf="parent"
                                 app:layout_constraintEnd_toEndOf="parent"
                                 app:layout_constraintBottom_toBottomOf="parent"
            />
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  tools:padding="0dp"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
            >
        <Button android:text=" Help "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/HelpButtonMap"
                android:background="@drawable/border_message"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <Button android:text="Cont"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="10dp"
                android:minHeight="10dp"
                android:id="@+id/ContinuousButton"
                android:onClick="continuousDo"
                android:visibility="visible"
                tools:visibility="visible"
                android:alpha="0.5"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/DoButton"
                />
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DoButton"
                android:text="@string/button_Do"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/border_message"
                />
    </LinearLayout>
    <LinearLayout android:id="@+id/actionBar"
                  android:orientation="horizontal"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  android:layout_marginStart="8dp"
                  tools:padding="0dp"
                  android:visibility="visible"
                  tools:visibility="visible"
                  android:layout_marginTop="8dp"
            >
        <TextView android:id="@+id/money1"
                  android:layout_width="60dp"
                  android:layout_height="40dp"
                  android:text="99999"
                  android:gravity="center_vertical"
                  android:textColor="#ffe34234"
                  android:textSize="16sp"
                  android:background="@drawable/border_xeno"
                  android:textAlignment="center"
                />
        <ImageView android:id="@+id/image1"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:srcCompat="@drawable/race_xenos"
                />
        <TextView android:id="@+id/action1"
                  android:layout_width="50dp"
                  android:layout_height="40dp"
                  android:text="-10"
                  android:gravity="center_vertical"
                  android:textColor="#ffe34234"
                  android:textSize="16sp"
                  android:background="@drawable/border_xeno"
                  android:textAlignment="center"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <TextView android:id="@+id/turns"
                  android:layout_width="50dp"
                  android:layout_height="40dp"
                  android:text="99999"
                  android:gravity="center_vertical"
                  android:textColor="@android:color/holo_orange_light"
                  android:textSize="16sp"
                  android:textAlignment="center"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <TextView android:id="@+id/action2"
                  android:layout_width="50dp"
                  android:layout_height="40dp"
                  android:text="-10"
                  android:gravity="center_vertical"
                  android:textColor="#ff009e73"
                  android:textSize="16sp"
                  android:background="@drawable/border_impi"
                  android:textAlignment="center"
                />
        <ImageView android:id="@+id/image2"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:srcCompat="@drawable/race_impi"
                />
        <TextView android:id="@+id/money2"
                  android:layout_width="60dp"
                  android:layout_height="40dp"
                  android:text="99999"
                  android:gravity="center_vertical"
                  android:textColor="#ff009e73"
                  android:textSize="16sp"
                  android:background="@drawable/border_impi"
                  android:textAlignment="center"
                />
    </LinearLayout>

    <FrameLayout android:id="@+id/details"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="@+id/mapView"
                 android:layout_marginEnd="32dp"
                 android:layout_marginTop="40dp"
                 app:layout_constraintTop_toTopOf="parent"
                 android:layout_marginStart="32dp"
            />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/version"
              android:text="Version"
              android:textColor="@android:color/holo_green_light"
              android:textSize="8sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
            />

</android.support.constraint.ConstraintLayout>
