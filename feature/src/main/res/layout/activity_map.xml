<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/imageViewLayout"
                                             android:orientation="vertical"
        >

    <com.zwsi.gb.feature.MapView android:id="@+id/mapView"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 app:layout_constraintStart_toStartOf="parent"
                                 app:layout_constraintTop_toTopOf="parent"
                                 app:layout_constraintEnd_toEndOf="parent"
                                 app:layout_constraintBottom_toBottomOf="parent"
            />
    <FrameLayout android:id="@+id/details"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="@+id/mapView"
                 android:layout_marginEnd="32dp"
                 android:layout_marginTop="32dp"
                 app:layout_constraintTop_toTopOf="parent"
                 android:layout_marginStart="32dp"
            />
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  tools:padding="0dp"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
            >
        <Button android:text=" Help "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/HelpButtonMap"
                android:background="@drawable/border_message"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <Button android:text="Cont"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="10dp"
                android:minHeight="10dp"
                android:id="@+id/ContinuousButton"
                android:onClick="continuousDo"
                android:visibility="visible"
                tools:visibility="visible"
                android:alpha="0.5"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/DoButton"
                />
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DoButton"
                android:text="@string/button_Do"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/border_message"
                />
    </LinearLayout>
    <LinearLayout android:id="@+id/actionBar"
                  android:orientation="horizontal"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginStart="8dp"
                  tools:padding="0dp"
                  android:visibility="invisible"
                  tools:visibility="visible"
            >
        <TextView android:id="@+id/action1"
                  android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  android:text="-10"
                  android:textColor="#ffff0000"
                  android:textSize="24sp"
                  android:background="@drawable/border_xeno"
                />
        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:srcCompat="@drawable/xenost"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Actions"
                  android:textColor="@android:color/holo_orange_light"
                  android:textSize="24sp"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:srcCompat="@drawable/impit"
                />
        <TextView android:id="@+id/action2"
                  android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  android:text="-10"
                  android:textColor="#ff00ff00"
                  android:textSize="24sp"
                  android:background="@drawable/border_impi"
                />
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/version"
              android:text="Version"
              android:textColor="@android:color/holo_green_light"
              android:textSize="8sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
            />

</android.support.constraint.ConstraintLayout>
