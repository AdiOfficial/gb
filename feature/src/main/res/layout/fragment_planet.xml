<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/PlanetFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        tools:context=".PlanetFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="W,1:2"
            android:id="@+id/ImageViewPlanet"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/PlanetStats"
            android:textColor="@android:color/holo_blue_light"
            android:text="Planet"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ImageViewPlanet" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/PlanetStats" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <Button
                android:text="(+)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/panzoomToPlanet"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                tools:visibility="visible"
                android:onClick="panzoomToPlanet" android:layout_marginStart="8dp"
                android:minWidth="0dp"/>
        <Button
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/panzoomToSystemStar"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                tools:visibility="visible"
                android:minWidth="0dp"
                android:onClick="panzoomToSystemStar" android:layout_marginStart="8dp"
        />
        <Button
                android:text="Make Factory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/makefactory"
                android:visibility="visible"
                tools:visibility="visible"
                android:onClick="makeFactory"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ImageViewPlanet"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>