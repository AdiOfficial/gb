<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlanetFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" android:id="@+id/PlanetView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView3"/>
    <ImageView
            android:src="@android:color/background_dark"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/imageView3" android:alpha="0.5"
            app:layout_constraintTop_toTopOf="@+id/PlanetStats"
            app:layout_constraintStart_toStartOf="@+id/PlanetStats"
            app:layout_constraintEnd_toEndOf="@+id/PlanetStats"
            app:layout_constraintBottom_toBottomOf="@+id/PlanetStats"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/PlanetStats"
            android:textColor="@android:color/holo_blue_light"
            app:layout_constraintTop_toBottomOf="@+id/PlanetView"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:text="Planet" android:textSize="24sp"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Make Factory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/makefactory"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:visibility="visible"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/PlanetStats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="makeFactory"/>
    <Button
            android:text="Xenos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colonize0"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            tools:visibility="visible"
            android:alpha="0.3"
            app:layout_constraintTop_toBottomOf="@+id/makefactory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/colonize1"
            android:onClick="colonize0"/>
    <Button
            android:text="Impi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colonize1"
            android:visibility="visible"
            tools:visibility="visible"
            android:alpha="0.3"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/makefactory"
            app:layout_constraintStart_toEndOf="@id/colonize0"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="colonize1"/>

</android.support.constraint.ConstraintLayout>