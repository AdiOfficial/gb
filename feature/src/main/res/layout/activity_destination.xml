<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:background="@drawable/border_message"
                                             android:layout_height="match_parent"
        >

    <ScrollView android:id="@+id/ScrollView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/okDestination"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
            >
        <LinearLayout android:id="@+id/Destinations"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintHorizontal_bias="0.0"
                      android:layout_marginEnd="8dp"
                      android:layout_marginStart="8dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      app:layout_constraintTop_toTopOf="parent"
                >
            <Space android:layout_width="10dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <TextView
                      android:textColor="@android:color/holo_orange_light"
                      android:textSize="24sp"
                      android:text="Destinations"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginStart="8dp"
                      android:layout_marginEnd="8dp"
                    />
            <Space android:layout_width="10dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
        </LinearLayout>
    </ScrollView>
    <Button android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelDestination"
            android:background="@drawable/border_message"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/okDestination"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            />
    <Button android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/okDestination"
            android:background="@drawable/border_message"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cancelDestination"
            android:layout_marginStart="8dp"
            />

</android.support.constraint.ConstraintLayout>