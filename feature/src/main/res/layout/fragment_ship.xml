<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:background="@drawable/border_message"
                                             android:layout_height="match_parent"
        >

    <ImageView android:layout_width="50dp"
               android:layout_height="50dp"
               android:id="@+id/ShipView"
               app:srcCompat="@drawable/podt"
               android:layout_marginEnd="8dp"
               android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="@+id/ShipStats"
               app:layout_constraintEnd_toStartOf="@+id/panzoomToShip"
            />
    <ImageView android:layout_width="50dp"
               android:layout_height="50dp"
               android:id="@+id/ShipRaceView"
               app:srcCompat="@drawable/impit"
               app:layout_constraintEnd_toStartOf="@+id/ShipView"
               android:layout_marginEnd="8dp"
               android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="@+id/ShipStats"
            />
    <TextView android:id="@+id/ShipStats"
              android:textColor="@android:color/holo_orange_light"
              android:textSize="24sp"
              android:text=""
              tools:text="Ship Details"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/ShipButtons"
              android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent"
            />
    <Button android:text=" (+) "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/panzoomToShip"
            android:visibility="visible"
            tools:visibility="visible"
            android:minWidth="0dp"
            android:onClick="panzoomToShip"
            android:background="@drawable/border_message"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ShipStats"
            />
    <HorizontalScrollView android:id="@+id/ShipButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
            >
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintHorizontal_bias="0.0"
                      android:layout_marginEnd="8dp"
                      android:layout_marginStart="8dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      app:layout_constraintTop_toTopOf="parent"
                >
            <Space android:layout_width="10dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:text="Pod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/makePod"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:background="@drawable/border_message"
                    />
            <Space android:layout_width="10dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:text="Cruiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/makeCruiser"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:background="@drawable/border_message"
                    />
            <Space android:layout_width="10dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:text="Shuttle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/makeShuttle"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:background="@drawable/border_message"
                    />
            <Space android:layout_width="10dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:text="Battle Star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/makeBattlestar"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:background="@drawable/border_message"
                    />
            <Space android:layout_width="10dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:text="Station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/makeStation"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:background="@drawable/border_message"
                    />
            <Space android:layout_width="10dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
        </LinearLayout>
    </HorizontalScrollView>
    <Spinner android:layout_width="200dp"
             android:layout_height="50dp"
             android:id="@+id/spinner"
             android:spinnerMode="dialog"
             android:background="@drawable/border_message"
             android:popupBackground="@drawable/border_message"
             android:layout_marginEnd="8dp"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="8dp"
             app:layout_constraintTop_toTopOf="parent"
            />

</android.support.constraint.ConstraintLayout>