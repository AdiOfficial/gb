<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#80000000"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/ShipView"
            app:srcCompat="@drawable/podt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ShipRaceView"
            app:srcCompat="@drawable/impit"
            app:layout_constraintEnd_toStartOf="@+id/ShipView"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/ShipStats"
            android:textColor="@android:color/holo_blue_bright"
            android:text=""
            tools:text="Ship Details"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/ShipView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:id="@+id/ShipBackground"
            android:visibility="gone"
            android:textColor="@android:color/holo_blue_bright"
            android:text="Description"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShipStats"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <LinearLayout
            android:id="@+id/ShipButtons"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShipStats">
        <Button
                android:text="(+)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/panzoomToShip"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                tools:visibility="visible"
                android:minWidth="0dp"
                android:onClick="panzoomToShip" android:layout_marginStart="8dp"/>
        <Button
                android:text="Make Pod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/makePod"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:onClick="makePod" android:layout_marginStart="8dp"/>
        <Button
                android:text="Make Cruiser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/makeCruiser"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/ShipBackground"
                app:layout_constraintStart_toEndOf="@id/makePod"
                android:visibility="gone"
                tools:visibility="visible"
                android:onClick="makeCruiser" android:layout_marginStart="8dp"/>
        <Button
                android:text="Fly To"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flyTo"
                android:visibility="visible"
                tools:visibility="visible"
                android:onClick="flyTo" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/goButton" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <Spinner android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/spinner"
                 android:layout_marginStart="8dp"
                 app:layout_constraintStart_toEndOf="@+id/flyTo" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="@+id/flyTo">
        </Spinner>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>