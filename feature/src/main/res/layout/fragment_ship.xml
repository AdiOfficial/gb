<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/ShipView"
            app:srcCompat="@drawable/podt"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@android:color/background_dark"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/ShipStats"
            app:layout_constraintStart_toStartOf="@+id/ShipBackground"
            app:layout_constraintEnd_toEndOf="@+id/ShipBackground"
            app:layout_constraintBottom_toBottomOf="@+id/ShipBackground" android:alpha="0.5"/>
    <TextView
            android:id="@+id/ShipStats"
            android:textColor="@android:color/holo_blue_bright"
            android:text="Ship"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShipView"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:id="@+id/ShipBackground"
            android:textColor="@android:color/holo_blue_bright"
            android:text="Description"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShipStats"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goButton"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShipBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/makePod"
            android:visibility="visible"
            tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.302"
            android:onClick="goToLocation"/>
    <Button
            android:text="Make Pod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/makePod"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/ShipBackground"
            app:layout_constraintStart_toEndOf="@id/goButton"
            app:layout_constraintEnd_toStartOf="@id/makeCruiser"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.302"
            android:onClick="makePod"/>
    <Button
            android:text="Make Cruiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/makeCruiser"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:alpha="0.3"
            app:layout_constraintTop_toBottomOf="@id/ShipBackground"
            app:layout_constraintStart_toEndOf="@id/makePod"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.302"
            android:onClick="makeCruiser"/>

</android.support.constraint.ConstraintLayout>